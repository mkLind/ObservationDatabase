<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/species_name"
                    android:layout_width="205dp"
                    android:textStyle="bold"
                    android:text="name"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/rarity"
                    android:text="rarity"
                    android:layout_alignEnd="@+id/species_name"
                    android:layout_alignRight="@+id/species_name"
                    android:layout_width="204dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="22dp"/>

            <TextView
                    android:id="@+id/notes"
                    android:text="notes"
                    android:layout_below="@+id/species_name"
                    android:layout_width="207dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="196dp"
                    android:layout_marginEnd="196dp"/>

            <TextView
                    android:id="@+id/date"
                    android:text="date"
                    android:layout_below="@+id/species_name"
                    android:layout_alignRight="@+id/notes"
                    android:layout_width="191dp"
                    android:layout_height="@dimen/listing_half_label_height"
                    android:layout_marginTop="-19dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

            <TextView
                    android:id="@+id/time"
                    android:text="time"
                    android:layout_below="@+id/date"
                    android:layout_alignRight="@+id/notes"
                    android:layout_width="191dp"
                    android:layout_height="@dimen/listing_half_label_height"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

            <TextView
                    android:id="@+id/latitude"
                    android:layout_width="191dp"
                    android:text="latitude"
                    android:layout_below="@id/date"
                    android:layout_alignRight="@id/notes"
                    android:layout_height="@dimen/listing_half_label_height"
                    android:layout_marginTop="24dp"
                    android:layout_alignStart="@+id/date"
                    android:layout_marginStart="4dp"
                    android:layout_marginRight="-196dp"/>

            <TextView
                    android:id="@+id/longitude"
                    android:text="longitude"
                    android:layout_width="191dp"
                    android:layout_below="@+id/latitude"
                    android:layout_alignRight="@id/notes"
                    android:layout_height="@dimen/listing_half_label_height"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="-196dp"
                    android:layout_marginEnd="0dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>