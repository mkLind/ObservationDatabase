<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/observationImage"
                    android:background="@drawable/round_corner"
                    android:layout_width="162dp"
                    android:layout_height="170dp"
                    android:layout_toRightOf="@+id/observation_info"
                    android:layout_marginLeft="1dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"/>

            <TableLayout
                    android:id="@+id/observation_info"
                    android:background="@drawable/round_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"

                        >

                    <TextView
                            android:id="@+id/species_name"
                            android:layout_width="@dimen/table_cell_w"
                            android:layout_height="@dimen/table_cell_h"
                            android:textStyle="bold"
                            android:text="name"
                            android:background="@drawable/round_corner"
                            android:layout_column="1"
                            />


                    <TextView
                            android:id="@+id/date"
                            android:text="date"
                            android:layout_width="@dimen/table_cell_w"
                            android:layout_height="@dimen/table_cell_h"
                            android:background="@drawable/round_corner"
                            android:layout_column="2"
                            />

                    <TextView
                            android:id="@+id/latitude"
                            android:background="@drawable/round_corner"
                            android:text="latitude"
                            android:layout_width="@dimen/table_cell_w"
                            android:layout_height="@dimen/table_cell_h"
                            android:layout_column="3"
                            />


                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >

                    <TextView
                            android:id="@+id/rarity"
                            android:text="rarity"
                            android:layout_width="@dimen/table_cell_w"
                            android:layout_height="@dimen/table_cell_h"
                            android:layout_column="1"
                            android:background="@drawable/round_corner"
                            />

                    <TextView
                            android:id="@+id/time"
                            android:text="time"
                            android:layout_width="@dimen/table_cell_w"
                            android:layout_height="@dimen/table_cell_h"
                            android:layout_column="2"
                            android:background="@drawable/round_corner"
                            />


                    <TextView
                            android:id="@+id/longitude"
                            android:text="longitude"
                            android:layout_width="@dimen/table_cell_w"
                            android:layout_height="@dimen/table_cell_h"
                            android:layout_column="3"
                            android:background="@drawable/round_corner"
                            />
                </TableRow>
            </TableLayout>

            <TextView
                    android:id="@+id/notes"
                    android:text="notes"
                    android:background="@drawable/round_corner"
                    android:layout_width="241dp"
                    android:layout_height="89dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="83dp"
                    android:layout_marginStart="0dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>